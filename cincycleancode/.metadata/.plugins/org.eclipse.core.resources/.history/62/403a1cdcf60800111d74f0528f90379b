package org.codingdojo.roman.numeral.type;

public enum DigitBoundaryType {
	
	NULL(-1, -1, -1, "", null), AYE(1,1, 3, "I", NULL), VEE(4,5, 8, "V", AYE);
	
	private final int minLimit;
	
	private final int value;
	
	public int getValue() {
		return value;
	}

	public int getMinLimit() {
		return minLimit;
	}

	public boolean isMinimum(int n) {
		return n == minLimit;
	}

	private final int maxLimit;
	
	private final String symbol;
	
	private final DigitBoundaryType previousType;

	public String getSymbol() {
		return symbol;
	}
	
	public String getPreviousType{
		return previousType;
	}

	private DigitBoundaryType(int minLimit, int value, int maxLimit, String symbol, DigitBoundaryType previousType) {
		this.minLimit = minLimit;
		this.maxLimit = maxLimit;
		this.symbol = symbol;
		this.previousType = previousType;
		this.value = value;
	}
	
	public static DigitBoundaryType findType(int n){
		for (DigitBoundaryType type : values()){
			if (n <=type.value){
				return type;
			}
		}
		throw new IllegalArgumentException("The Romans weren't that clever to find: "+n);
	}
	

}
