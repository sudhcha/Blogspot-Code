package org.codingdojo.roman.numeral.converter;


public class Converter {

	public String toNumeral(Integer input) throws Exception {
		StringBuilder numeral = new StringBuilder();
		int firstValue = input/1000;
		int reminder = input%1000;
		for (int i = 0; i < firstValue; i++){
			numeral.append("M");
		}
		int difference = 1000 - reminder;
		if (difference == 100){
			numeral.append("CM");
		}
		
		return numeral.toString();
	}

}
